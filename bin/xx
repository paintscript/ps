#!/usr/bin/env bash

while [[ $1 ]]; do
  case "$1" in
    1) ONCE=true; shift;;
    w) WATCH=true; shift;;
    *) echo "error: invalid argument $1"; exit 1;
  esac
done

args="-m kaocha.runner"

if [[ $ONCE != true ]]; then args="$args --watch"; fi

echo "running xx with: $args"

clojure -A:xx $args
